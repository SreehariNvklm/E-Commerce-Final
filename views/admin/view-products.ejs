<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product)=>{ %>
                <tr>
                    <th scope="row">1</th>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.description %></td>
                    <td><img class="card-img-top" src="/product-images/<%= product._id %>.jpg" style="width: 80px;height: 100px;"></td>
                    <td>
                        <a href="/admin/edit-product/<%= product._id %>" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/<%= product._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete the product <%= product.name %> ?')" >Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</section>